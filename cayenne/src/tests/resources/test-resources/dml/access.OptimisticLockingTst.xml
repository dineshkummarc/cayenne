<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans default-lazy-init="true">	
	<!-- ======================================= -->
	<!-- Named Queries -->
	<!-- ======================================= -->
	<bean id="SimpleLockingInsert1" class="org.objectstyle.cayenne.query.SqlModifyQuery">
		<constructor-arg type="java.lang.Class"><value>org.objectstyle.cayenne.testdo.locking.SimpleLockingTest</value></constructor-arg>
		<constructor-arg><value>
		insert into SIMPLE_LOCKING_TEST (LOCKING_TEST_ID, NAME, DESCRIPTION) values (1, 'LockTest1', null)
		</value></constructor-arg>
	</bean>

	<!-- ======================================= -->
	<!-- Data Sets -->
	<!-- ======================================= -->	
	<bean id="testSimpleLocking" class="java.util.ArrayList">
		<constructor-arg>
			<list><ref bean="SimpleLockingInsert1"/></list>
		</constructor-arg>
	</bean>	
</beans>