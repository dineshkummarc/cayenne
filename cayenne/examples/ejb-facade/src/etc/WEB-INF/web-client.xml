<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC
   "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
   "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>EJB Facade Web Client</display-name>
   
	<servlet>
		<servlet-name>auction</servlet-name>
		<servlet-class>org.objectstyle.cayenne.example.ejbfacade.web.AuctionServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>


	<!-- Standard Action Servlet Mapping -->
	<servlet-mapping>
		<servlet-name>auction</servlet-name>
		<url-pattern>/auction</url-pattern>
	</servlet-mapping>

	<!-- The Welcome File List -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>


   
	<ejb-ref>
		<ejb-ref-name>ejb/cayenne/examples/AuctionSession</ejb-ref-name>
		<ejb-ref-type>Session</ejb-ref-type>
		<home>org.objectstyle.cayenne.examples.ejbfacade.interfaces.AuctionSessionRemote</home>
		<remote>org.objectstyle.cayenne.examples.ejbfacade.interfaces.AuctionSession</remote>
	</ejb-ref>
</web-app>

