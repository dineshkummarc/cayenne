<?xml version="1.0"?>

<!-- ================================================= -->
<!-- Common build paths.                               -->
<!-- ================================================= -->
<project default="...">
	
	<property environment="cayenne.env"/>
	
	<!-- ============================================= -->
	<!-- Source Paths.                                 -->
	<!-- ============================================= -->
	<path id="srcpath-cayenne-1_4">
		<pathelement path="${cayenne.java}/src/cayenne/java"/>
	</path>
	
	<path id="srcpath-cayenne-1_5">
		<pathelement path="${cayenne.java.1_5}/src/cayenne/java"/>
	</path>
	
	<path id="srcpath-cayenne-all">
		<path refid="srcpath-cayenne-1_4"/>
		<path refid="srcpath-cayenne-1_5"/>
	</path>
	
	<path id="srcpath-modeler">
		<pathelement path="${cayenne.java}/src/modeler/java"/>
	</path>
	
	<path id="srcpath-dvmodeler">
		<pathelement path="${cayenne.java}/src/dvmodeler/java"/>
	</path>
	
	<path id="srcpath-tests-1_4">
		<pathelement path="${cayenne.java}/src/tests/java"/>
	</path>
	
	<path id="srcpath-tests-1_5">
		<pathelement path="${cayenne.java.1_5}/src/tests/java"/>
	</path>
	
	<path id="srcpath-tests-all">
		<path refid="srcpath-tests-1_4"/>
		<path refid="srcpath-tests-1_5"/>
	</path>
	
	<!-- ============================================= -->
	<!-- Class Paths.                                  -->
	<!-- ============================================= -->
	
	<path id="classpath-lib">
		<fileset dir="${cayenne.java}/lib" includes="*.jar"/>
	</path>
	
	<path id="classpath-cayenne-1_4">
		<path refid="classpath-lib"/>
		<pathelement path="${build}/cayenne-1_4/classes"/>
	</path>
	
	<path id="classpath-cayenne-lib">
		<path refid="classpath-cayenne-1_4"/>
		<pathelement path="${build}/cayenne-1_5/classes"/>
	</path>
	
	<path id="classpath-cayenne-lib-tools">
		<path refid="classpath-cayenne-lib"/>
		<pathelement path="${build}/modeler/classes"/>
		<pathelement path="${cayenne.java}/src/modeler/resources"/>
	</path>
	
	<path id="classpath-tests-1_4">
		<path refid="classpath-cayenne-lib"/>
		<pathelement path="${build}/tests-1_4/classes"/>
		<pathelement path="build/tests-1_4/deps"/>
	</path>
	
	<path id="classpath-tests">
		<path refid="classpath-tests-1_4"/>
		<pathelement path="${build}/tests-1_5/classes"/>
	</path>
	
	<path id="classpath-tests-run">
		<path refid="classpath-tests"/>
		
		<!-- Exclude any XML parsers Ant might bundle...rely on JAXP instead -->
		<fileset dir="${ant.home}/lib" includes="*.jar"
			excludes="*xalan*,*xerces*,*xml-api*"/>
		<pathelement path="${cayenne.env.CLASSPATH}"/>
	</path>
	
	<path id="classpath-javacc">
		<fileset dir="${cayenne.java}/lib" includes="javacc*.jar"/>
	</path>
</project>